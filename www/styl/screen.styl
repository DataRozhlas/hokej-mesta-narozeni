@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .map
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    .leaflet-div-icon
      border 0px none
      background rgba(255,255,255,0.5)
      border-radius 50%
      border 5px solid rgba(rgb(166,189,219), 0.4)
      div
        border-radius 50%
        width 100%
        height 100%
        text-align center
        color white
        font-size 16px
        opacity 0.9
        position relative
        span
          position absolute
          margin-top 1px
          top 50%
          width 100%
          display block
          line-height 0px
    .leaflet-popup-content
      margin 0px
      width 220px
      h3
        margin 13px 19px 10px 19px
      ul
        margin 0px
        padding 0px 19px 13px 19px
        list-style-type none
        max-height 200px
        overflow auto
        li
          margin-bottom 2px
          padding 0px

      &:hover
        border-color rgba(rgb(166,189,219), 0.8)
        div
          opacity 1

